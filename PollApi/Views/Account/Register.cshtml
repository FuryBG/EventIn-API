@model Domain.DtoModels.RegisterUserDto;
@{
    Layout = null;
}

<div class="login-page">
    @Html.Partial("_Aside")
    <div class='login-container'>
        <div class='form-container'>
            <span>Log in to your account</span>
            <form asp-controller="Account" asp-action="Register" method="post">
                @{
                    if (ViewBag.ErrorMessage != null)
                    {
                        <span class="validation-error">@ViewBag.ErrorMessage</span>
                    }
                }
                <div class='input-container'>
                    <label>Email</label>
                    <input type="email" name="Email" />
                </div>
                <div class="validation-error">
                    @Html.ValidationMessageFor(x => x.Email)
                </div>
                <div class='input-container'>
                    <label>First Name</label>
                    <input type="text" name="FirstName" />
                </div>
                <div class="validation-error">
                    @Html.ValidationMessageFor(x => x.FirstName)
                </div>
                <div class='input-container'>
                    <label>Last Name</label>
                    <input type="text" name="LastName" />
                </div>
                <div class="validation-error">
                    @Html.ValidationMessageFor(x => x.LastName)
                </div>
                <div class='input-container'>
                    <label>Password</label>
                    <input type="password" name="Password" />
                </div>
                <div class="validation-error">
                    @Html.ValidationMessageFor(x => x.Password)
                </div>
                <div class='input-container'>
                    <label>Re Pass</label>
                    <input type="password" name="RepeatPassword" />
                </div>
                <div class="validation-error">
                    @Html.ValidationMessageFor(x => x.RepeatPassword)
                </div>
                <div>
                    <a href="/account/login">Already have account?</a>
                </div>
                <button class="c-button">Register</button>
            </form>
        </div>
    </div>
</div>
<link href="~/css/login.css" rel="stylesheet" />
